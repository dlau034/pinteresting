<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Our Projects</h1>
  </div>

<div class="panel-body">
<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>ID</th>
      <th>Email</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>        
        <td><%= pin.user_id %></td>             
        <td><%= pin.user.email if pin.user %>
        <td><%= pin.user.created_at %>

        <td>
          <%= link_to 'Show', pin, class: "btn btn-info btn-xs" %>
        <% if pin.user == current_user %>
          <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-warning btn-xs"  %>          
          <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"  %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
  <% if user_signed_in? %>
    <div class="panel-footer">
      <%= link_to 'New Pin', new_pin_path %>
    </div>
  <% end %>
</div>